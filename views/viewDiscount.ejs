<%
  let productNameSort = "";
  let priceSort = "";
  let quantitySort = "";
  let createdAtSort = "";
  if (typeof(req) != 'undefined' && typeof(req.query.column) != 'undefined' && typeof(req.query.type) != 'undefined') {
    if (req.query.column == "started_at") {
      if (req.query.type && req.query.type == "desc") {
        productNameSort = "desc";
      } else {
        productNameSort = "asc";
      }
    }
    if (req.query.column == "expires_at") {
      if (req.query.type && req.query.type == "desc") {
        priceSort = "desc";
      } else {
        priceSort = "asc";
      }
    }
    if (req.query.column == "value") {
      if (req.query.type && req.query.type == "desc") {
        createdAtSort = "desc";
      } else {
        createdAtSort = "asc";
      }
    }
  }
%>

<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Discount</h1>   
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/discount/insert" class="btn btn-sm btn-outline-secondary">+ New discount</a>
    </div>
  </div>
</div>

<% messages.forEach(element => { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= element %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% }) %>



<div class="table-responsive">

  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Started at <a class="<%= (productNameSort == "desc") ? "text-body-tertiary" : "" %>" href="/discount/sort/?_sort&column=started_at&type=desc"><i class="bi bi-arrow-down"></i></a> <a class="<%= (productNameSort == "asc") ? "text-body-tertiary" : "" %>" href="/discount/sort/?_sort&column=started_at&type=asc"><i class="bi bi-arrow-up"></i></a></th>
        <th scope="col">Expires at <a class="<%= (priceSort == "desc") ? "text-body-tertiary" : "" %>" href="/discount/sort/?_sort&column=expires_at&type=desc"><i class="bi bi-arrow-down"></i></a> <a class="<%= (priceSort == "asc") ? "text-body-tertiary" : "" %>" href="/discount/sort/?_sort&column=expires_at&type=asc"><i class="bi bi-arrow-up"></i></a></th>
        <th scope="col">Value <a class="<%= (createdAtSort == "desc") ? "text-body-tertiary" : "" %>" href="/discount/sort/?_sort&column=value&type=desc"><i class="bi bi-arrow-down"></i></a> <a class="<%= (createdAtSort == "asc") ? "text-body-tertiary" : "" %>" href="/discount/sort/?_sort&column=value&type=asc"><i class="bi bi-arrow-up"></i></a></th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <% clients.forEach(element => { %>
        <tr class="align-middle">
          <td><%= element.started_at.toLocaleString('en') %></td>
          <td><%= element.expires_at.toLocaleString('en') %></td>
          <td><%= element.value %>%</td>
        
          <td class="text-end">

            <div class="d-flex flex-row justify-content-end gap-2">

              <a href="/discount/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>

              <div>
                <button type="button" class="btn btn-danger btn-small" data-bs-toggle="modal"
                data-bs-target="#deleteModal" data-bs-id="<%=element._id%>"> <i class="bi bi-trash"></i></button>
            </div>
            </div>


          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<form method="post" name="delete-form"></form>


<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <h1 class="modal-title fs-5" id="modalLabel">Delete Product</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              Confirm d√≠count deletion?
          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
              <button type="button" class="btn btn-primary" id="btn-delete">Continue</button>
          </div>
      </div>
  </div>
</div>



<script>
  document.addEventListener("DOMContentLoaded", function () {
      var id
      var deleteForm = document.forms['delete-form']

      const deleteModal = document.getElementById('deleteModal')
      deleteModal.addEventListener('show.bs.modal', event => {
          const button = event.relatedTarget;
          id = button.getAttribute('data-bs-id')
      })

      var btn_del = document.getElementById('btn-delete')
      btn_del.onclick = function () {
          deleteForm.action = 'discount/delete/' + id + "?_method=DELETE"
          deleteForm.submit()
      }
  });
</script>


<% if (clients.length > 0) { %>
  <nav aria-label="Dashboard Pagination">
    <ul class="pagination justify-content-center mt-5">

      <% if (current == 1) { %>
        <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
      <% } else { %>
        <li class="page-item"><a href="/discount/?page=1" class="page-link">First</a></li>
      <% } %>

      <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
      <% if(i !== 1) { %>
        <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
      <% } %>

      <% for(; i <= (Number(current) + 4) && i <= pages; i++ ) { %>
        <% if (i == current) { %>
          <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
        <% } else { %>
          <li class="page-item"><a href="/discount/?page=<%= i %>" class="page-link"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
        <% } %>
      <% } %>

      <% if (current == pages) { %>
        <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
      <% } else { %>
        <li class="page-item"><a href="/discount/?page=<%= pages %>" class="page-link">Last</a></li>
      <% } %>

    </ul>
  </nav>
<% } %>

