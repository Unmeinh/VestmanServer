<%
  let productNameSort = "";
  let priceSort = "";
  let quantitySort = "";
  let createdAtSort = "";
  if (typeof(req) != 'undefined' && typeof(req.query.column) != 'undefined' && typeof(req.query.type) != 'undefined') {
    if (req.query.column == "name_product") {
      if (req.query.type && req.query.type == "desc") {
        productNameSort = "desc";
      } else {
        productNameSort = "asc";
      }
    }
    if (req.query.column == "price") {
      if (req.query.type && req.query.type == "desc") {
        priceSort = "desc";
      } else {
        priceSort = "asc";
      }
    }
    if (req.query.column == "quantity") {
      if (req.query.type && req.query.type == "desc") {
        quantitySort = "desc";
      } else {
        quantitySort = "asc";
      }
    }
    if (req.query.column == "created_at") {
      if (req.query.type && req.query.type == "desc") {
        createdAtSort = "desc";
      } else {
        createdAtSort = "asc";
      }
    }
  }
%>

<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Product</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/product/insert" class="btn btn-sm btn-outline-secondary">+ New Product</a>
    </div>
  </div>
</div>

<% messages.forEach(element => { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= element %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% }) %>

<div class="table-responsive">

  <table class="table table-striped table-sm sortable">
    <thead>
      <tr>
        <th scope="col">Product's name  
          <a class="<%= (productNameSort == "desc") ? "text-body-tertiary" : "" %>" href="/product/sort/?_sort&column=name_product&type=desc"><i class="bi bi-arrow-down"></i></a>
          <a class="<%= (productNameSort == "asc") ? "text-body-tertiary" : "" %>" href="/product/sort/?_sort&column=name_product&type=asc"><i class="bi bi-arrow-up"></i></a></th>
        <th scope="col">Price 
          <a class="<%= (priceSort == "desc") ? "text-body-tertiary" : "" %>" href="/product/sort/?_sort&column=price&type=desc"><i class="bi bi-arrow-down"></i></a>
          <a class="<%= (priceSort == "asc") ? "text-body-tertiary" : "" %>" href="/product/sort/?_sort&column=price&type=asc"><i class="bi bi-arrow-up"></i></a> </th>
        <th scope="col">Quantity  
          <a class="<%= (quantitySort == "desc") ? "text-body-tertiary" : "" %>" href="/product/sort/?_sort&column=quantity&type=desc"><i class="bi bi-arrow-down"></i></a>
          <a class="<%= (quantitySort == "asc") ? "text-body-tertiary" : "" %>" href="/product/sort/?_sort&column=quantity&type=asc"><i class="bi bi-arrow-up"></i></a></th>
        <th scope="col">Created at  
          <a class="<%= (createdAtSort == "desc") ? "text-body-tertiary" : "" %>" href="/product/sort/?_sort&column=created_at&type=desc"><i class="bi bi-arrow-down"></i></a>
          <a class="<%= (createdAtSort == "asc") ? "text-body-tertiary" : "" %>" href="/product/sort/?_sort&column=created_at&type=asc"><i class="bi bi-arrow-up"></i></a></th>
        <th scope="col" class="text-end">Action</th>
      </tr>
    </thead>

    <tbody>
      <% clients.forEach(element => { %>
        <tr class="align-middle">
          <td><%= element.name_product %></td>
          <td><%= element.price.toLocaleString() %> VND</td>
          <td><%= element.quantity %></td>
          <td><%= element.created_at.toLocaleString('en') %></td>
          <td class="text-end">

            <div class="d-flex flex-row justify-content-end gap-2">

              <a href="/product/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>

              <a href="/product/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>

              <form action="/product/delete/<%= element._id %>" method="POST" class="position-relative">
                <button type="submit" class="btn btn-danger btn-small">
                  <i class="bi bi-person-x"></i>
                </button>
              </form>

            </div>


          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>



<% if (clients.length > 0) { %>
  <nav aria-label="Dashboard Pagination">
    <ul class="pagination justify-content-center mt-5">

      <% if (current == 1) { %>
        <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
      <% } else { %>
        <li class="page-item"><a href="/?page=1" class="page-link">First</a></li>
      <% } %>

      <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
      <% if(i !== 1) { %>
        <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
      <% } %>

      <% for(; i <= (Number(current) + 4) && i <= pages; i++ ) { %>
        <% if (i == current) { %>
          <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
        <% } else { %>
          <li class="page-item"><a href="/?page=<%= i %>" class="page-link"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
          <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
        <% } %>
      <% } %>

      <% if (current == pages) { %>
        <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
      <% } else { %>
        <li class="page-item"><a href="/?page=<%= pages %>" class="page-link">Last</a></li>
      <% } %>

    </ul>
  </nav>
<% } %>

