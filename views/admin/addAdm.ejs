<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Admin</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
          <li class="breadcrumb-item active">New admin</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>User</b>
    </div>
  </div>
</div>

<form action="/admin/insert" method="POST" enctype="multipart/form-data">
  <div class="row form-group mb-4">
    <div class="col">
      <label for="lastName">User name</label>
      <input
        type="text"
        class="form-control"
        id="username"
        name="username"
        value=""
        placeholder="User name"
        required
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="tel">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        value=""
        placeholder="Password"
        required
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="lastName">Full name</label>
      <input
        type="text"
        class="form-control"
        id="full_name"
        name="full_name"
        value=""
        placeholder="Full name"
        required
      />
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="file">File image</label>
      <input
        type="file"
        class="form-control"
        id="image"
        name="image"
        value=""
        placeholder=""
        required
      />
    </div>

    <div class="col">
      <label for="lastName">Permission</label>
      <select id="permission" name="permission" class="form-select">
        <option value="2">Participant</option>
        <option value="1">Manager</option>  
      </select>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add Admin</button>
  </div>
</form>
